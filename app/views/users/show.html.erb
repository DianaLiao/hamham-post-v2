<% if @user.profile_picture.attached? %> 
  <img src="<%= url_for(@user.profile_picture)%>" class="profile-photo">
<% end %>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user), :class => "template-link"  %> |
<% end %>
<%= link_to 'Back', users_path, :class => "template-link"  %>
