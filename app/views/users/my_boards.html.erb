<h1>My Boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Most Recent Message</th>
    </tr>
  </thead>

  <tbody>
    <% @user_boards.each do |board| %>
      <tr>
        <td class="name"><%= link_to board.name, board_path(board) %></td>
        <td><%= board.desc %></td>
        <td><%= link_to board.most_recent_message.readable_date_time, board_path(board) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>