<% if @user %>
<h1>Welcome, <%= @user.first_name %>!</h1>

Unread boards:
<% if(!@unseen_boards.empty?) %>
  <ul>
    <%@unseen_boards.each do |board| %>
      <li> <%= link_to board.name, board_path(board.id) %> </li>
    <% end %>
  </ul>
<% else %>
  None!<br>
<% end %>
<% end %>
