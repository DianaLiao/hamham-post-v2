<p>

  <strong>Board:</strong>
  <%= @board.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @board.desc %>
</p>

<!-- Button for user to sub to this board -->
<p>
<% if(!@is_member) %>
<%= form_for @membership do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :board_id, value: @board.id %>
  <%= f.submit "Subscribe" %>
<% end %>

<% else %>

<%= form_for @membership, method: "delete" do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :board_id, value: @board.id %>
  <%= f.submit "Unsubscribe" %>
<% end %>
<% end %>
</p>




<a href="#newest">Jump to last message</a>


<%= render "shared/message" %>

<% @messages.each do |message| %>
    <% if message.user.id == current_user.id %>
      <div class = "right-message">
        <div class = "self-message" >
    <% else %>
      <div class = "left-message">
        <div class = "other-message">
    <% end %>


          <strong><%= link_to message.user.first_name, user_path(message.user) %></strong> (<%= message.created_at.localtime.strftime("%m/%d/%Y at %I:%M%p") %>):<br>
          <%= message.content %>
        </div>
      </div>
<% end %>
<a name="newest"></a>

